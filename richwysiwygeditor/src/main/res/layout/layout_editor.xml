<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/write_coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lumyjuwon.richwysiwygeditor.RichEditor.EditableWebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_toolbar"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:autoLink="web|email"
        android:background="@color/white"
        android:gravity="start"
        android:textCursorDrawable="@drawable/edit_cursor" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        />

    <HorizontalScrollView
        android:id="@+id/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_border_white"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/layout_toolbar_buttons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:orientation="horizontal">

            <com.gee12.htmlwysiwygeditor.ActionButton
                android:id="@+id/button_textSize"
                android:layout_width="@dimen/toolbar_icon_width_size"
                android:layout_height="@dimen/toolbar_icon_height_size"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/text_size"
                android:scaleType="fitCenter"
                android:src="@drawable/outline_format_size_black_48" />

            <com.gee12.htmlwysiwygeditor.ActionButton
                android:id="@+id/button_fgColor"
                android:layout_width="@dimen/toolbar_icon_width_size"
                android:layout_height="@dimen/toolbar_icon_height_size"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/text_color"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_format_color_text_black_48" />

            <com.gee12.htmlwysiwygeditor.ActionButton
                android:id="@+id/button_bgColor"
                android:layout_width="@dimen/toolbar_icon_width_size"
                android:layout_height="@dimen/toolbar_icon_height_size"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/text_color"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_format_color_fill_black_48" />

<!--            <com.gee12.htmlwysiwygeditor.ActionButton-->
<!--                android:id="@+id/button_textBold"-->
<!--                android:layout_width="@dimen/toolbar_icon_width_size"-->
<!--                android:layout_height="@dimen/toolbar_icon_height_size"-->
<!--                android:background="?attr/selectableItemBackground"-->
<!--                android:contentDescription="@string/text_bold"-->
<!--                android:scaleType="fitCenter"-->
<!--                android:src="@drawable/outline_format_bold_black_48" />-->

            <com.gee12.htmlwysiwygeditor.ActionButton
                android:id="@+id/button_textItalic"
                android:layout_width="@dimen/toolbar_icon_width_size"
                android:layout_height="@dimen/toolbar_icon_height_size"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/text_italic"
                android:scaleType="fitCenter"
                android:src="@drawable/outline_format_italic_black_48" />

            <com.gee12.htmlwysiwygeditor.ActionButton
                android:id="@+id/button_textUnderLine"
                android:layout_width="@dimen/toolbar_icon_width_size"
                android:layout_height="@dimen/toolbar_icon_height_size"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/text_align"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_format_underlined_black_48" />

            <com.gee12.htmlwysiwygeditor.ActionButton
                android:id="@+id/button_textStrike"
                android:layout_width="@dimen/toolbar_icon_width_size"
                android:layout_height="@dimen/toolbar_icon_height_size"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/text_strike"
                android:scaleType="fitCenter"
                android:src="@drawable/outline_format_strikethrough_black_48" />

            <com.gee12.htmlwysiwygeditor.ActionButton
                android:id="@+id/button_textAlign"
                android:layout_width="@dimen/toolbar_icon_width_size"
                android:layout_height="@dimen/toolbar_icon_height_size"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/text_align"
                android:scaleType="fitCenter"
                android:src="@drawable/outline_format_align_left_black_48" />

            <ImageButton
                android:id="@+id/button_insertLink"
                android:layout_width="@dimen/toolbar_icon_width_size"
                android:layout_height="@dimen/toolbar_icon_height_size"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/insert_link"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_link_insert_black" />

            <ImageButton
                android:id="@+id/button_removeLink"
                android:layout_width="@dimen/toolbar_icon_width_size"
                android:layout_height="@dimen/toolbar_icon_height_size"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/remove_link"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_link_remove_black" />

            <ImageButton
                android:id="@+id/button_insert_line"
                android:layout_width="@dimen/toolbar_icon_width_size"
                android:layout_height="@dimen/toolbar_icon_height_size"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/insert_line"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_line_black" />

            <ImageButton
                android:id="@+id/button_imageInsert"
                android:layout_width="@dimen/toolbar_icon_width_size"
                android:layout_height="@dimen/toolbar_icon_height_size"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/insert_image"
                android:scaleType="fitCenter"
                android:src="@drawable/outline_image_black_48"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <ImageButton
                android:id="@+id/button_videoInsert"
                android:layout_width="@dimen/toolbar_icon_width_size"
                android:layout_height="@dimen/toolbar_icon_height_size"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/insert_video"
                android:scaleType="fitCenter"
                android:src="@drawable/outline_slideshow_black_48"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.135"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>